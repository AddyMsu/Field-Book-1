<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AboutLibrariesCustom" parent="AboutLibrariesTheme">

        <item name="fb_color_primary">@color/main_primary</item>
        <item name="fb_color_primary_dark">@color/main_primary_dark</item>
        <item name="fb_color_accent">@color/main_color_accent</item>

        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="drawerArrowStyle">@style/AboutLibrariesTheme.DrawerArrowStyle</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">?attr/fb_color_primary</item>
        <item name="colorPrimaryDark">?attr/fb_color_primary_dark</item>
        <item name="colorAccent">?attr/fb_color_accent</item>

        <item name="titleTextColor">?attr/fb_title_text_color</item>

        <!-- AboutLibraries specific values -->
        <item name="about_libraries_window_background">?attr/fb_color_background</item>

        <item name="about_libraries_card">?attr/fb_color_primary_dark</item>

        <item name="about_libraries_title_openSource">@color/about_libraries_title_openSource_dark
        </item>
        <item name="about_libraries_text_openSource">@color/about_libraries_text_openSource_dark
        </item>
        <item name="about_libraries_special_button_openSource">
            @color/about_libraries_special_button_openSource_dark
        </item>
        <item name="about_libraries_dividerDark_openSource">
            @color/about_libraries_dividerDark_openSource_dark
        </item>
        <item name="about_libraries_dividerLight_openSource">
            @color/about_libraries_dividerLight_openSource_dark
        </item>
    </style>

    <!-- Blue Theme -->
    <style name="AboutLibrariesCustom.Blue">
        <item name="fb_color_primary">@color/blue_primary</item>
        <item name="fb_color_primary_dark">@color/blue_primary_dark</item>
        <item name="fb_color_accent">@color/blue_color_accent</item>
    </style>

    <!-- High Contrast Theme -->
    <style name="AboutLibrariesCustom.HighContrast">
        <item name="fb_color_primary">@color/high_contrast_primary</item>
        <item name="fb_color_primary_dark">@color/high_contrast_primary_dark</item>
        <item name="fb_color_accent">@color/high_contrast_color_accent</item>
    </style>

</resources>