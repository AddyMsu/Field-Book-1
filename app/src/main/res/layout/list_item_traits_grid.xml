<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/list_item_traits_grid_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/selector_button"
        android:contentDescription="@string/list_item_traits_grid_content_description"
        android:padding="32dp"
        android:scaleType="centerCrop"
        android:scaleX="2"
        android:scaleY="2"
        tools:src="@drawable/ic_trait_numeric" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:id="@+id/list_item_traits_grid_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="marquee"
        android:singleLine="true"
        tools:text="@string/traits_format_disease_rating" />

</LinearLayout>