<?xml version="1.0" encoding="utf-8"?>
<com.fieldbook.tracker.traits.MultiCatTraitLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multicatLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    xmlns:tools="http://schemas.android.com/tools"
    tools:visibility="visible">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:spanCount="4"
        tools:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/trait_multicat_button"
        tools:itemCount="8" />

</com.fieldbook.tracker.traits.MultiCatTraitLayout>