<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/act_brapi_importer_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/fb_color_primary"
        app:menu="@menu/menu_filter_brapi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:visibility="visible"
        android:id="@+id/brapi_importer_pb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginTop="-7dp"
        app:layout_constraintTop_toBottomOf="@id/act_brapi_importer_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.fieldbook.tracker.views.SearchBar
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/brapi_importer_sb"
        app:layout_constraintTop_toBottomOf="@id/act_brapi_importer_tb"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.chip.ChipGroup
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/brapi_importer_cg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/brapi_importer_sb" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:id="@+id/brapi_importer_fetch_data_tv"
        android:text="@string/brapi_importer_fetch_data"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brapi_importer_cg"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/brapi_importer_rv"
        android:orientation="vertical"
        tools:listitem="@layout/list_item_label_checkbox"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/brapi_importer_fetch_data_tv"
        app:layout_constraintBottom_toTopOf="@id/act_brapi_import_tv"/>

    <!-- hidden pagination ui that brapi service is coupled to -->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <include
            layout="@layout/brapi_pagination_buttons"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:onClick="buttonClicked"
                android:text="@string/brapi_save_data_button" />
        </LinearLayout>

    </LinearLayout>

    <TextView style="@style/TextViewStyle.Bold.Title"
        android:visibility="gone"
        android:id="@+id/act_brapi_import_tv"
        android:text="@string/select"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/fb_color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>