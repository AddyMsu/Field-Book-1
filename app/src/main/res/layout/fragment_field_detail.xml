<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/fb_color_primary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nested Scroll view -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Overview Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <!-- Card Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header for collapsible area -->
                <LinearLayout
                    android:id="@+id/collapsible_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextViewStyle.Bold.Title"
                            android:id="@+id/fieldName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"/>

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/importDateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024-01-01" />
                    </LinearLayout>

                    <!-- Collapse/Expand Icon -->
                    <ImageView
                        android:id="@+id/expand_collapse_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_chevron_down" />
                </LinearLayout>

                <!-- Collapsible Content -->
                <LinearLayout
                    android:id="@+id/collapsible_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Import Source Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/importSourceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Imported from sample file"/>
                    </LinearLayout>

                    <!-- Entries Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/entryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500 entries"/>
                    </LinearLayout>

                    <!-- Sort Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/sortTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sorted by import order"/>
                    </LinearLayout>

                    <!-- Additional Info: Unique, Primary & Secondary Identifiers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Unique ID -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                style="@style/TextViewStyle.Sub"
                                android:textStyle="bold"
                                android:text="Unique ID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                style="@style/TextViewStyle.Sub"
                                android:id="@+id/uniqueIdTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="plot_id"/>
                        </LinearLayout>

                        <!-- Primary ID -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                style="@style/TextViewStyle.Sub"
                                android:textStyle="bold"
                                android:text="Primary ID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                style="@style/TextViewStyle.Sub"
                                android:id="@+id/primaryIdTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="row"/>
                        </LinearLayout>

                        <!-- Secondary ID -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                style="@style/TextViewStyle.Sub"
                                android:textStyle="bold"
                                android:text="Secondary ID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                style="@style/TextViewStyle.Sub"
                                android:id="@+id/secondaryIdTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="plot"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Collect Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCollect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <!-- Card Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Collect Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <TextView
                            style="@style/TextViewStyle.Bold.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Collect"/>

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/lastEditTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No activity" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_nav_drawer_collect_data" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Export Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <!-- Card Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Export Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <TextView
                            style="@style/TextViewStyle.Bold.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Export"/>

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/lastExportTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No activity" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/trait_date_save" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sync Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <!-- Card Content -->
            <LinearLayout
                android:id="@+id/syncLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Sync Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <TextView
                            style="@style/TextViewStyle.Bold.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sync"/>

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/lastSyncTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No activity" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_field_sync" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Data Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <!-- Card Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    style="@style/TextViewStyle.Bold.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:layout_marginBottom="8dp"/>

                <!-- Traits Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/traitCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 traits"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            style="@style/TextViewStyle.Sub"
                            android:id="@+id/observationCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250 observations by 2 people" />

                    </LinearLayout>

<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:src="@drawable/ic_nav_drawer_traits" />-->
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fieldDetailRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>