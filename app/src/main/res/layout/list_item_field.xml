<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <RadioButton
        android:id="@+id/fieldRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:checked="false"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView style="@style/TextViewStyle.Bold"
            android:id="@+id/list_item_trait_trait_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:minWidth="120dp"
            android:singleLine="true"
            tools:text="field_sample"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView style="@style/TextViewStyle.Sub"
                android:id="@+id/field_import_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="2022-01-08"/>

            <View
                android:id="@+id/spacer5"
                android:layout_width="25dp"
                android:layout_height="1dp" />

            <TextView style="@style/TextViewStyle.Sub"
                android:id="@+id/field_edit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="2022-07-17"/>

            <View
                android:id="@+id/spacer6"
                android:layout_width="25dp"
                android:layout_height="1dp" />

            <TextView style="@style/TextViewStyle.Sub"
                android:id="@+id/field_export_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="2022-07-23"/>

        </LinearLayout>

        <TextView style="@style/TextViewStyle.Sub"
            android:id="@+id/field_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:minWidth="40dp"
            android:singleLine="true"
            android:textColor="@color/main_details"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/observationLevelLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:minWidth="40dp"
            android:singleLine="true"
            android:textColor="@color/main_details"
            android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/popupMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:paddingTop="3dp"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:src="@drawable/ic_more_vert"
        android:scaleType="fitCenter"
        android:contentDescription="@string/list_item_field_popup_menu_content_description" />

</LinearLayout>
